{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "Bundler", // introduced in TypeScript 5.0
    "outDir": ".build" /* Redirect output structure to the directory. */,
    "rootDir": "./",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "ES2022",
    "strict": true
  },
  "include": ["src/**/*.ts"],
}
