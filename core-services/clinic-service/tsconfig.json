{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": false,
    "module":"commonjs",
    "moduleResolution":"node",
    "skipLibCheck": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true, 
    "isolatedModules": true, 
    "paths": {
      "@/*": ["./*"],
      "@config/*": ["config/*"],
      "@functions/*": ["functions/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": ".build",
    "rootDir": "./",
    "plugins": [
      { 
        "transform": "typescript-transform-paths" 
      }
    ]
  },
  "exclude": [
    "jest.config.ts",
    "**/*.unitTest.ts"
  ]
}
