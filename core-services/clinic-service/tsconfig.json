{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module":"commonjs",
    "moduleResolution":"node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "isolatedModules": true, 
    "paths": {
      "@/*": ["./*"],
      "@config/*": ["config/*"],
      "@functions/*": ["functions/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
