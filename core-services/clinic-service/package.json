{
  "name": "clinic-service",
  "private": true,
  "version": "1.0.0",
  "description": "AWS lambda for managing PETs clinics using serverless framework",
  "main": "clinics.js",
  "engines": {
    "node": "18.*",
    "yarn": "1.22.*"
  },
  "scripts": {
    "start": "serverless offline start --verbose",
    "start-m": "BRANCH=local SLS_DEBUG=* serverless offline start",
    "test": "jest",
    "test-m": "BRANCH=local jest",
    "tools-setup": "sls dynamodb install",
    "build": "tspc -b tsconfig.json && yarn run build:copy",
    "build:copy": "find src -type f \\( -name \"*.yml\" -or -name \"*.json\" \\) | cpio -pdm .build && find test -type f \\( -name \"*.yml\" -or -name \"*.json\" \\)  | cpio -pdm .build",
    "zip": "zip -r test-service.zip .build"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.585.0",
    "@aws-sdk/lib-dynamodb": "^3.585.0",
    "aws-lambda": "^1.0.7",
    "aws-xray-sdk": "^3.9.0",
    "global": "^4.4.0",
    "node-yaml": "^4.0.1",
    "path-parser": "^6.1.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.12",
    "@types/jest-plugin-context": "^2.9.7",
    "aws-sdk-client-mock": "^4.0.1",
    "jest": "^29.7.0",
    "jest-plugin-context": "^2.9.0",
    "serverless-auto-swagger": "^3.0.0",
    "serverless-dynamodb": "^0.2.54",
    "serverless-http": "^3.2.0",
    "serverless-offline": "^14.0.0",
    "serverless-offline-aws-eventbridge": "^2.1.0",
    "serverless-plugin-tracing": "^2.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.2.1",
    "typescript": "5.5.4",
    "typescript-transform-paths": "3.4.7"
  }
}
