{
  "private": "true",
  "name": "pets-monorepo",
  "version": "1.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "security-checks": "git secrets --scan",
    "test": "pnpm cypress run --reporter cypress-mochawesome-reporter",     
    "test:open": "pnpm cypress open",
    "clean:reports": "rimraf cypress/reports",     
    "merge:reports": "mochawesome-merge cypress/reports/json/*.json > cypress/reports/report.json",     
    "create:html:report": "marge cypress/reports/report.json -f report -o cypress/reports",
    "test:report": "pnpm clean:reports && pnpm cypress run && pnpm merge:reports && pnpm create:html:report",     
    "pretest:report": "mkdir cypress\\reports 2>nul || exit 0"
    
  },
  "main": "index.js",
  "repository": "git@github.com:UKHSA-Internal/pre-entry-tb-screening-app.git",
  "author": "Tomide Fasugba",
  "license": "MIT",
  "dependencies": {
    "prettier": "^3.3.3"
  },
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee"
}
